{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "cargo run -- start -m server",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run server",
			"options": {
				"cwd": "${workspaceFolder}/game"
			}
		},
		{
			"type": "shell",
			"command": "cargo run -- start -m client",
			"problemMatcher": [
				"$rustc"
			],
			"label": "rust: cargo run client",
			"options": {
				"cwd": "${workspaceFolder}/game"
			}
		}
	]
}